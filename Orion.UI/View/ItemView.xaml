                                                 ctrl:TextBoxHelper.Watermark="Item Name" HorizontalAlignment="Left" Margin="110,0,0,0"/>

                                <Button HorizontalAlignment="Right"
                                Command="{Binding AddItemUnitCommand}" Background="#93C039"
                            ToolTip="Add Item">
                                    <Button.Content>
                                        <icon:PackIconModern Kind="Add"   
                                                        VerticalAlignment="Center"
