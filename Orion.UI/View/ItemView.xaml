                                <DataGridTextColumn Header="Motor" Binding="{Binding CatalogPump.Motor}"   HeaderStyle="{StaticResource ColumnHeaderStyle}"    IsReadOnly="True" Width="auto"/>
                            </DataGrid.Columns>
                        </DataGrid>
                    </Expander>

                    <Expander ctrl:ControlsHelper.ContentCharacterCasing="Normal" Margin="0,5,5,0" IsExpanded="True" MaxHeight="300">
                        <Expander.Style>
                            <Style TargetType="Expander" BasedOn="{StaticResource MahApps.Styles.Expander}">
                                <Setter Property="Visibility" Value="Visible"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding Quote.ItemUnit.HasItems, UpdateSourceTrigger=PropertyChanged, Mode=OneWay}" Value="False">
