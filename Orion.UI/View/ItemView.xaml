<UserControl x:Class="Orion.UI.View.ItemView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Orion.UI.View"
             mc:Ignorable="d" 
             xmlns:ctrl="http://metro.mahapps.com/winfx/xaml/controls"
             xmlns:dialog="clr-namespace:MahApps.Metro.Controls.Dialogs;assembly=MahApps.Metro"
             dialog:DialogParticipation.Register="{Binding}"
             xmlns:icon="http://metro.mahapps.com/winfx/xaml/iconpacks" 
             xmlns:vm="clr-namespace:Orion.UI.ViewModel"
             xmlns:view="clr-namespace:Orion.UI.View"
             xmlns:i="http://schemas.microsoft.com/xaml/behaviors" 
             d:DesignHeight="2000" d:DesignWidth="2000"
             d:DataContext="{d:DesignInstance Type=vm:ItemViewModel}">
    
    <i:Interaction.Triggers>
        <i:EventTrigger EventName="Loaded" >
            <i:InvokeCommandAction Command="{Binding LoadDataCommand}"/>
        </i:EventTrigger>
    </i:Interaction.Triggers>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition MinWidth="400" MaxWidth="400"/>
        </Grid.ColumnDefinitions>
        
        <Grid Grid.Column="0">
            <Grid.Style>
                <Style TargetType="Grid">
                    <Setter Property="IsEnabled" Value="False"/>
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding TitlesActive, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" Value="False">
                            <Setter Property="IsEnabled" Value="True"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </Grid.Style>
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition Height="auto"/>
            </Grid.RowDefinitions>

            <GroupBox Grid.Row="0"  Header="Products"
                      ctrl:ControlsHelper.ContentCharacterCasing="Normal"
                                  Margin="5,5,0,5">

                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
                    <StackPanel Orientation="Vertical">

                        <Expander Margin="0,0,0,5" Width="120" IsExpanded="False">
                            <Expander.Header>
                                <TextBlock Text="Quantech" TextWrapping="Wrap"/>
                            </Expander.Header>
                            <StackPanel Orientation="Vertical">

                                <Button Margin="1" Background="DarkSlateBlue" Padding="0" Command="{Binding EditItemsCommand}" CommandParameter="A1">
                                    <Button.Content>
                                        <TextBlock Text="Air Cooled Chillers Factory Lead Time" TextWrapping="Wrap"/>
                                    </Button.Content>
                                </Button>

                                <Button Margin="1" Background="DarkSlateBlue" Padding="0" Command="{Binding EditItemsCommand}" CommandParameter="A2">
                                    <Button.Content>
                                        <TextBlock Text="Air Cooled Chillers Stock Non Coated Condenser"  TextWrapping="Wrap"/>
                                    </Button.Content>
                                </Button>

                                <Button Margin="1" Background="DarkSlateBlue" Padding="0" Command="{Binding EditItemsCommand}" CommandParameter="A3">
                                    <Button.Content>
                                        <TextBlock Text="Air Cooled Chillers Stock Post Coated Condenser"  TextWrapping="Wrap"/>
                                    </Button.Content>
                                </Button>

                                <Button Margin="1" Background="DarkSlateBlue" Padding="0" Command="{Binding EditItemsCommand}" CommandParameter="A4">
                                    <Button.Content>
                                        <TextBlock Text="Water Cooled Chillers Factory Lead Time"  TextWrapping="Wrap"/>
                                    </Button.Content>
                                </Button>

                            </StackPanel>
                        </Expander>

                        <Expander Header="ABB" Margin="0,0,0,5" Width="120" IsExpanded="False">
                            <StackPanel Orientation="Vertical">

                                <Button Margin="1" Background="DarkCyan" Padding="0" Command="{Binding EditItemsCommand}" CommandParameter="B1">
                                    <Button.Content>
                                        <TextBlock Text="BARE" TextWrapping="Wrap"/>
                                    </Button.Content>
                                </Button>

                                <Button Margin="1" Background="DarkCyan" Padding="0" Command="{Binding EditItemsCommand}" CommandParameter="B2">
                                    <Button.Content>
                                        <TextBlock Text="VCR"  TextWrapping="Wrap"/>
                                    </Button.Content>
                                </Button>

                                <Button Margin="1" Background="DarkCyan" Padding="0" Command="{Binding EditItemsCommand}" CommandParameter="B3">
                                    <Button.Content>
                                        <TextBlock Text="PCR"  TextWrapping="Wrap"/>
                                    </Button.Content>
                                </Button>

                                <Button Margin="1" Background="DarkCyan" Padding="0" Command="{Binding EditItemsCommand}" CommandParameter="B4">
                                    <Button.Content>
                                        <TextBlock Text="BCR"  TextWrapping="Wrap"/>
                                    </Button.Content>
                                </Button>

                                <Button Margin="1" Background="DarkCyan" Padding="0" Command="{Binding EditItemsCommand}" CommandParameter="B5">
                                    <Button.Content>
                                        <TextBlock Text="Accesories"  TextWrapping="Wrap"/>
                                    </Button.Content>
                                </Button>

                            </StackPanel>
                        </Expander>

                        <Expander  Margin="0,0,0,5" Width="120" IsExpanded="False">
                            <Expander.Header>
                                <TextBlock Text="American Wheatley" TextWrapping="Wrap"/>
                            </Expander.Header>
                            <StackPanel Orientation="Vertical">

                                <Button Margin="1" Background="DarkMagenta" Padding="0" Command="{Binding EditItemsCommand}" CommandParameter="c1">
                                    <Button.Content>
                                        <TextBlock Text="Triple Duty Valves" TextWrapping="Wrap"/>
                                    </Button.Content>
                                </Button>

                                <Button Margin="1" Background="DarkMagenta" Padding="0" Command="{Binding EditItemsCommand}" CommandParameter="c2">
                                    <Button.Content>
                                        <TextBlock Text="Section Diffusers" TextWrapping="Wrap"/>
                                    </Button.Content>
                                </Button>

                                <Button Margin="1" Background="DarkMagenta" Padding="0" Command="{Binding EditItemsCommand}" CommandParameter="c3">
                                    <Button.Content>
                                        <TextBlock Text="Tanks" TextWrapping="Wrap"/>
                                    </Button.Content>
                                </Button>

                                <Button Margin="1" Background="DarkMagenta" Padding="0" Command="{Binding EditItemsCommand}" CommandParameter="c4">
                                    <Button.Content>
                                        <TextBlock Text="Separators" TextWrapping="Wrap"/>
                                    </Button.Content>
                                </Button>

                            </StackPanel>
                        </Expander>


                        <Expander  Margin="0,0,0,5" Width="120" IsExpanded="False">
                            <Expander.Header>
                                <TextBlock Text="Puroflux" TextWrapping="Wrap"/>
                            </Expander.Header>
                            <StackPanel Orientation="Vertical">

                                <Button Margin="1" Background="DarkSalmon" Padding="0" Command="{Binding EditItemsCommand}" CommandParameter="d1">
                                    <Button.Content>
                                        <TextBlock Text="Separators" TextWrapping="Wrap"/>
                                    </Button.Content>
                                </Button>

                                <Button Margin="1" Background="DarkSalmon" Padding="0" Command="{Binding EditItemsCommand}" CommandParameter="d2">
                                    <Button.Content>
                                        <TextBlock Text="Sand Filters" TextWrapping="Wrap"/>
                                    </Button.Content>
                                </Button>
                            </StackPanel>
                        </Expander>

                        <Expander  Margin="0,0,0,5" Width="120" IsExpanded="False">
                            <Expander.Header>
                                <TextBlock Text="Groundfos" TextWrapping="Wrap"/>
                            </Expander.Header>
                            <StackPanel Orientation="Vertical">

                                <Button Margin="1" Background="DarkOliveGreen" Padding="0" Command="{Binding EditItemsCommand}" CommandParameter="e1">
                                    <Button.Content>
                                        <TextBlock Text="NBS" TextWrapping="Wrap"/>
                                    </Button.Content>
                                </Button>

                                <Button Margin="1" Background="DarkOliveGreen" Padding="0" Command="{Binding EditItemsCommand}" CommandParameter="e2">
                                    <Button.Content>
                                        <TextBlock Text="LCS" TextWrapping="Wrap"/>
                                    </Button.Content>
                                </Button>

                                <Button Margin="1" Background="DarkOliveGreen" Padding="0" Command="{Binding EditItemsCommand}" CommandParameter="e3">
                                    <Button.Content>
                                        <TextBlock Text="LC" TextWrapping="Wrap"/>
                                    </Button.Content>
                                </Button>

                                <Button Margin="1" Background="DarkOliveGreen" Padding="0" Command="{Binding EditItemsCommand}" CommandParameter="e4">
                                    <Button.Content>
                                        <TextBlock Text="LF" TextWrapping="Wrap"/>
                                    </Button.Content>
                                </Button>

                                <Button Margin="1" Background="DarkOliveGreen" Padding="0" Command="{Binding EditItemsCommand}" CommandParameter="e5">
                                    <Button.Content>
                                        <TextBlock Text="VL" TextWrapping="Wrap"/>
                                    </Button.Content>
                                </Button>

                                <Button Margin="1" Background="DarkOliveGreen" Padding="0" Command="{Binding EditItemsCommand}" CommandParameter="e6">
                                    <Button.Content>
                                        <TextBlock Text="VLS" TextWrapping="Wrap"/>
                                    </Button.Content>
                                </Button>

                                <Button Margin="1" Background="DarkOliveGreen" Padding="0" Command="{Binding EditItemsCommand}" CommandParameter="e7">
                                    <Button.Content>
                                        <TextBlock Text="KP" TextWrapping="Wrap"/>
                                    </Button.Content>
                                </Button>
                            </StackPanel>
                        </Expander>

                        <Expander  Margin="0,0,0,5" Width="120" IsExpanded="False">
                            <Expander.Header>
                                <TextBlock Text="UV Resources" TextWrapping="Wrap"/>
                            </Expander.Header>
                            <StackPanel Orientation="Vertical">

                                <Button Margin="1" Background="DeepSkyBlue" Padding="0" Command="{Binding EditItemsCommand}" CommandParameter="f1">
                                    <Button.Content>
                                        <TextBlock Text="UV" TextWrapping="Wrap"/>
                                    </Button.Content>
                                </Button>
                            </StackPanel>
                        </Expander>

                        <Expander  Margin="0,0,0,5" Width="120" IsExpanded="False">
                            <Expander.Header>
                                <TextBlock Text="BAC - Cooling Towers" TextWrapping="Wrap"/>
                            </Expander.Header>
                            <StackPanel Orientation="Vertical">

                                <Button Margin="1" Background="DarkSlateGray" Padding="0" Command="{Binding EditItemsCommand}" CommandParameter="g1">
                                    <Button.Content>
                                        <TextBlock Text="Series 300" TextWrapping="Wrap"/>
                                    </Button.Content>
                                </Button>

                                <Button Margin="1" Background="DarkSlateGray" Padding="0" Command="{Binding EditItemsCommand}" CommandParameter="g2">
                                    <Button.Content>
                                        <TextBlock Text="Series 1500" TextWrapping="Wrap"/>
                                    </Button.Content>
                                </Button>

                                <Button Margin="1" Background="DarkSlateGray" Padding="0" Command="{Binding EditItemsCommand}" CommandParameter="g3">
                                    <Button.Content>
                                        <TextBlock Text="PT2" TextWrapping="Wrap"/>
                                    </Button.Content>
                                </Button>

                                <Button Margin="1" Background="DarkSlateGray" Padding="0" Command="{Binding EditItemsCommand}" CommandParameter="g4">
                                    <Button.Content>
                                        <TextBlock Text="FXT" TextWrapping="Wrap"/>
                                    </Button.Content>
                                </Button>

                                <Button Margin="1" Background="DarkSlateGray" Padding="0" Command="{Binding EditItemsCommand}" CommandParameter="g5">
                                    <Button.Content>
                                        <TextBlock Text="Series V (VT0 / VT1)" TextWrapping="Wrap"/>
                                    </Button.Content>
                                </Button>

                                <Button Margin="1" Background="DarkSlateGray" Padding="0" Command="{Binding EditItemsCommand}" CommandParameter="g6">
                                    <Button.Content>
                                        <TextBlock Text="Low Profile Series V (VTL)" TextWrapping="Wrap"/>
                                    </Button.Content>
                                </Button>
                            </StackPanel>
                        </Expander>

                        <Expander  Margin="0,0,0,5" Width="120" IsExpanded="False">
                            <Expander.Header>
                                <TextBlock Text="BAC - Closed Circuits" TextWrapping="Wrap"/>
                            </Expander.Header>
                            <StackPanel Orientation="Vertical">

                                <Button Margin="1" Background="Firebrick" Padding="0" Command="{Binding EditItemsCommand}" CommandParameter="h1">
                                    <Button.Content>
                                        <TextBlock Text="FXV and FXV3" TextWrapping="Wrap"/>
                                    </Button.Content>
                                </Button>

                                <Button Margin="1" Background="Firebrick" Padding="0" Command="{Binding EditItemsCommand}" CommandParameter="h2">
                                    <Button.Content>
                                        <TextBlock Text="PFi" TextWrapping="Wrap"/>
                                    </Button.Content>
                                </Button>

                                <Button Margin="1" Background="Firebrick" Padding="0" Command="{Binding EditItemsCommand}" CommandParameter="h3">
                                    <Button.Content>
                                        <TextBlock Text="VF1 And VFL Low Profile" TextWrapping="Wrap"/>
                                    </Button.Content>
                                </Button>

                                <Button Margin="1" Background="Firebrick" Padding="0" Command="{Binding EditItemsCommand}" CommandParameter="h4">
                                    <Button.Content>
                                        <TextBlock Text="HXV" TextWrapping="Wrap"/>
                                    </Button.Content>
                                </Button>

                                <Button Margin="1" Background="Firebrick" Padding="0" Command="{Binding EditItemsCommand}" CommandParameter="h5">
                                    <Button.Content>
                                        <TextBlock Text="NEXUS" TextWrapping="Wrap"/>
                                    </Button.Content>
                                </Button> 
                            </StackPanel>
                        </Expander>
                    </StackPanel>
                </ScrollViewer>
            </GroupBox>

            <GroupBox Header="Actions" 
                      ctrl:ControlsHelper.ContentCharacterCasing="Normal"
                      Grid.Row="1"
                                  Margin="5,0,0,5">
                <Grid >
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <Button 
                                    Margin="1"
                                    Background="Orange"
                                    Command="{Binding BackToQuotesCommad}"
                                    ToolTip="Back"
                                    Grid.Column="0">
                        <Button.Content>
                            <StackPanel Orientation="Vertical">
                                <icon:PackIconMaterial Kind="KeyboardReturn" 
                                                        Grid.Column="1" 
                                                        VerticalAlignment="Center"
                                                        HorizontalAlignment="Center">
                                    <icon:PackIconMaterial.LayoutTransform>
                                        <TransformGroup>
                                            <ScaleTransform ScaleX="0.75" ScaleY="0.75"/>
                                        </TransformGroup>
                                    </icon:PackIconMaterial.LayoutTransform>
                                </icon:PackIconMaterial>
                            </StackPanel>
                        </Button.Content>
                    </Button>


                    <Button 
                                    Margin="1"
                                    Background="{StaticResource MahApps.Brushes.Accent}"
                                    Command="{Binding UpdateQuoteItemsCommand}"
                                    ToolTip="Save / Update Specs" 
                                    Grid.Column="1">
                        <Button.Content>
                            <StackPanel Orientation="Vertical">
                                <icon:PackIconMaterial Kind="ContentSave" 
                                                        Grid.Column="1" 
                                                        VerticalAlignment="Center"
                                                        HorizontalAlignment="Center">
                                    <icon:PackIconMaterial.LayoutTransform>
                                        <TransformGroup>
                                            <ScaleTransform ScaleX="0.75" ScaleY="0.75"/>
                                        </TransformGroup>
                                    </icon:PackIconMaterial.LayoutTransform>
                                </icon:PackIconMaterial>
                            </StackPanel>
                        </Button.Content>
                    </Button>

                </Grid>
            </GroupBox>
        </Grid>


        <Grid Grid.Column="1">
            <Grid.Style>
                <Style TargetType="Grid">
                    <Setter Property="Grid.ColumnSpan" Value="2"/>
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding TitlesActive, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" Value="True">
                            <Setter Property="Grid.ColumnSpan" Value="1"/>
                            <Setter Property="IsEnabled" Value="False"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </Grid.Style>

            <Border Grid.Row="1" BorderThickness="1" BorderBrush="{StaticResource MahApps.Brushes.Accent}" Margin="5">
                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
                    <StackPanel Orientation="Vertical">
                       
                        
                        <Expander IsExpanded="False" Margin="5,5,5,0" BorderBrush="DarkSlateBlue">
                            <Expander.Header>
                                <Label Content="Quantech" Background="DarkSlateBlue" Margin="-26,-2,-2,-2" />
                            </Expander.Header>
                            <Expander.Style>
                                <Style TargetType="Expander" BasedOn="{StaticResource MahApps.Styles.Expander}">
                                    <Style.Triggers>
                                        <MultiDataTrigger>
                                            <MultiDataTrigger.Conditions>
                                                <Condition Binding="{Binding ItemA1s.Count}" Value="0"/>
                                                <Condition Binding="{Binding ItemA2s.Count}" Value="0"/>
                                                <Condition Binding="{Binding ItemA3s.Count}" Value="0"/>
                                                <Condition Binding="{Binding ItemA4s.Count}" Value="0"/>
                                            </MultiDataTrigger.Conditions>
                                                <Setter Property="Visibility" Value="Collapsed"/>
                                        </MultiDataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Expander.Style>
                            <StackPanel Orientation="Vertical">
                                <Expander Grid.Row="0" ctrl:ControlsHelper.ContentCharacterCasing="Normal"  Margin="0,0,0,0" IsExpanded="True">
                                    <Expander.Style>
                                        <Style TargetType="Expander" BasedOn="{StaticResource MahApps.Styles.Expander}">
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding ItemA1s.Count}" Value="0">
                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Expander.Style>
                                    <Expander.Header>
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="auto"/>
                                            </Grid.ColumnDefinitions>

                                            <Label Grid.Column="0" Content="Air Cooled Chillers Factory Lead Time"  VerticalAlignment="Center" />

                                            <Button HorizontalAlignment="Right" Width="65" Grid.Column="1"
                                Command="{Binding EditItemsCommand}"  Background="DarkSlateBlue" CommandParameter="A1"
                            ToolTip="Edit Items">
                                                <Button.Content>
                                                    <icon:PackIconMaterial Kind="PencilPlus"   
                                                        VerticalAlignment="Center"
                                                        HorizontalAlignment="Center">
                                                        <icon:PackIconMaterial.LayoutTransform>
                                                            <TransformGroup>
                                                                <ScaleTransform ScaleX="0.75" ScaleY="0.75"/>
                                                            </TransformGroup>
                                                        </icon:PackIconMaterial.LayoutTransform>
                                                    </icon:PackIconMaterial>
                                                </Button.Content>
                                            </Button>
                                        </Grid>
                                    </Expander.Header>


                                    <DataGrid
                            ItemsSource="{Binding ItemA1s, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"  
                            Style="{StaticResource DGridStyle}"
                            CanUserSortColumns="False"
                            FrozenColumnCount="6">
                                        <DataGrid.Columns>
                                            <DataGridTemplateColumn   CanUserResize="False"  Width="auto">
                                                <DataGridTemplateColumn.CellTemplate>
                                                    <DataTemplate>
                                                        <Button Grid.Row="0"
                                                        Background="Orange"
                                                        ToolTip="Move To Start"
                                                        Command="{Binding Path=DataContext.MoveToStartCommand, RelativeSource={RelativeSource AncestorType={x:Type DataGrid}}}" CommandParameter="{Binding}" >
                                                            <icon:PackIconBoxIcons Kind="SolidArrowToTop">
                                                                <icon:PackIconBoxIcons.LayoutTransform>
                                                                    <TransformGroup>
                                                                        <ScaleTransform ScaleX="0.75" ScaleY="0.75"/>
                                                                    </TransformGroup>
                                                                </icon:PackIconBoxIcons.LayoutTransform>
                                                            </icon:PackIconBoxIcons>
                                                        </Button>
                                                    </DataTemplate>
                                                </DataGridTemplateColumn.CellTemplate>
                                            </DataGridTemplateColumn>

                                            <DataGridTemplateColumn   CanUserResize="False"  Width="auto">
                                                <DataGridTemplateColumn.CellTemplate>
                                                    <DataTemplate>
                                                        <Button Grid.Row="0"
                                                        Background="{StaticResource MahApps.Brushes.Accent}"
                                                        ToolTip="Move To Up"
                                                        Command="{Binding Path=DataContext.MoveToUpCommand, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type UserControl}}}" CommandParameter="{Binding}" >
                                                            <icon:PackIconFontAwesome Kind="CaretUpSolid">
                                                                <icon:PackIconFontAwesome.LayoutTransform>
                                                                    <TransformGroup>
                                                                        <ScaleTransform ScaleX="0.75" ScaleY="0.75"/>
                                                                    </TransformGroup>
                                                                </icon:PackIconFontAwesome.LayoutTransform>
                                                            </icon:PackIconFontAwesome>
                                                        </Button>
                                                    </DataTemplate>
                                                </DataGridTemplateColumn.CellTemplate>
                                            </DataGridTemplateColumn>

                                            <DataGridTemplateColumn   CanUserResize="False"  Width="auto">
                                                <DataGridTemplateColumn.CellTemplate>
                                                    <DataTemplate>
                                                        <Button ToolTip="Delete Item"  Background="DarkRed" Command="{Binding DataContext.DeleteItemCommand, RelativeSource={RelativeSource AncestorType={x:Type DataGrid}}}" CommandParameter="{Binding}">
                                                            <icon:PackIconMaterial Kind="Delete">
                                                                <icon:PackIconMaterial.LayoutTransform>
                                                                    <TransformGroup>
                                                                        <ScaleTransform ScaleX="0.75" ScaleY="0.75"/>
                                                                    </TransformGroup>
                                                                </icon:PackIconMaterial.LayoutTransform>
                                                            </icon:PackIconMaterial>

                                                        </Button>
                                                    </DataTemplate>
                                                </DataGridTemplateColumn.CellTemplate>
                                            </DataGridTemplateColumn>

                                            <DataGridTemplateColumn   CanUserResize="False"  Width="auto">
                                                <DataGridTemplateColumn.CellTemplate>
                                                    <DataTemplate>
                                                        <Button ToolTip="Item Info" Command="{Binding DataContext.ShowItemTitlesCommand, RelativeSource={RelativeSource AncestorType={x:Type UserControl}}}" CommandParameter="{Binding}">
                                                            <icon:PackIconFontAwesome Kind="InfoSolid">
                                                                <icon:PackIconFontAwesome.LayoutTransform>
                                                                    <TransformGroup>
                                                                        <ScaleTransform ScaleX="0.75" ScaleY="0.75"/>
                                                                    </TransformGroup>
                                                                </icon:PackIconFontAwesome.LayoutTransform>
                                                            </icon:PackIconFontAwesome>

                                                        </Button>
                                                    </DataTemplate>
                                                </DataGridTemplateColumn.CellTemplate>
                                            </DataGridTemplateColumn>

                                            <DataGridTemplateColumn   CanUserResize="False"  Width="auto">
                                                <DataGridTemplateColumn.CellTemplate>
                                                    <DataTemplate>
                                                        <Button Grid.Row="0"
                                                        Background="{StaticResource MahApps.Brushes.Accent}"
                                                        ToolTip="Move To Down"
                                                        Command="{Binding Path=DataContext.MoveToDownCommand, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type UserControl}}}" CommandParameter="{Binding}" >
                                                            <icon:PackIconFontAwesome Kind="CaretDownSolid">
                                                                <icon:PackIconFontAwesome.LayoutTransform>
                                                                    <TransformGroup>
                                                                        <ScaleTransform ScaleX="0.75" ScaleY="0.75"/>
                                                                    </TransformGroup>
                                                                </icon:PackIconFontAwesome.LayoutTransform>
                                                            </icon:PackIconFontAwesome>
                                                        </Button>
                                                    </DataTemplate>
                                                </DataGridTemplateColumn.CellTemplate>
                                            </DataGridTemplateColumn>

                                            <DataGridTemplateColumn   CanUserResize="False"  Width="auto">
                                                <DataGridTemplateColumn.CellTemplate>
                                                    <DataTemplate>
                                                        <Button Grid.Row="0"
                                                        Background="Orange"
                                                        ToolTip="Move To End"
                                                        Command="{Binding Path=DataContext.MoveToEndCommand, RelativeSource={RelativeSource AncestorType={x:Type DataGrid}}}" CommandParameter="{Binding}" >
                                                            <icon:PackIconBoxIcons Kind="SolidArrowToBottom" >
                                                                <icon:PackIconBoxIcons.LayoutTransform>
                                                                    <TransformGroup>
                                                                        <ScaleTransform ScaleX="0.75" ScaleY="0.75"/>
                                                                    </TransformGroup>
                                                                </icon:PackIconBoxIcons.LayoutTransform>
                                                            </icon:PackIconBoxIcons>
                                                        </Button>
                                                    </DataTemplate>
                                                </DataGridTemplateColumn.CellTemplate>
                                            </DataGridTemplateColumn>

                                            <DataGridTemplateColumn Header="Exclude">
                                                <DataGridTemplateColumn.HeaderStyle>
                                                    <Style TargetType="DataGridColumnHeader" BasedOn="{StaticResource ColumnHeaderStyle}"/>
                                                </DataGridTemplateColumn.HeaderStyle>
                                                <DataGridTemplateColumn.CellTemplate>
                                                    <DataTemplate>
                                                        <CheckBox ToolTip="Exclude item from quote" IsChecked="{Binding IsExcluded, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}">
                                                            <CheckBox.Style>
                                                                <Style TargetType="CheckBox" BasedOn="{StaticResource MahApps.Styles.CheckBox}">
                                                                    <Setter Property="VerticalAlignment" Value="Center"/>
                                                                    <Setter Property="VerticalContentAlignment" Value="Center"/>
                                                                    <Setter Property="HorizontalAlignment" Value="Center"/>
                                                                    <Setter Property="HorizontalContentAlignment" Value="Center"/>
                                                                    <Setter Property="LayoutTransform">
                                                                        <Setter.Value>
                                                                            <ScaleTransform ScaleX="1.25" ScaleY="1.25" />
                                                                        </Setter.Value>
                                                                    </Setter>
                                                                </Style>
                                                            </CheckBox.Style>
                                                        </CheckBox>
                                                    </DataTemplate>
                                                </DataGridTemplateColumn.CellTemplate>
                                            </DataGridTemplateColumn>

                                            <DataGridTemplateColumn Header="Override">
                                                <DataGridTemplateColumn.HeaderStyle>
                                                    <Style TargetType="DataGridColumnHeader" BasedOn="{StaticResource ColumnHeaderStyle}"/>
                                                </DataGridTemplateColumn.HeaderStyle>
                                                <DataGridTemplateColumn.CellTemplate>
                                                    <DataTemplate>
                                                        <CheckBox ToolTip="Override item prices" IsChecked="{Binding OverridePrice, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}">
                                                            <CheckBox.Style>
                                                                <Style TargetType="CheckBox" BasedOn="{StaticResource MahApps.Styles.CheckBox}">
                                                                    <Setter Property="VerticalAlignment" Value="Center"/>
                                                                    <Setter Property="VerticalContentAlignment" Value="Center"/>
                                                                    <Setter Property="HorizontalAlignment" Value="Center"/>
                                                                    <Setter Property="HorizontalContentAlignment" Value="Center"/>
                                                                    <Setter Property="LayoutTransform">
                                                                        <Setter.Value>
                                                                            <ScaleTransform ScaleX="1.25" ScaleY="1.25" />
                                                                        </Setter.Value>
                                                                    </Setter>
                                                                </Style>
                                                            </CheckBox.Style>
                                                        </CheckBox>
                                                    </DataTemplate>
