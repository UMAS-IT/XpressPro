                                <Label Content="{Binding Quote.ItemUnit.DefaultItemName}" VerticalAlignment="Center"/>
                                <Label Content=":" VerticalAlignment="Center" Margin="100,0,0,0"/>
                                <TextBox Text="{Binding Quote.ItemUnit.Name, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" 
