                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding ItemC3s.Count}" Value="0">
                                                    <Setter Property="Visibility" Value="Collapsed" />
                                                </DataTrigger>
                                            </Style.Triggers>
