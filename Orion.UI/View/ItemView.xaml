                            Style="{StaticResource DGridStyle}"
                            FrozenColumnCount="6">

                            <DataGrid.Columns>

                                <DataGridTemplateColumn   CanUserResize="False"  Width="auto">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <Button Grid.Row="0"
                                                        Background="Orange"
                                                        ToolTip="Move To Start"
                                                        Command="{Binding Path=DataContext.MoveToStartCommand, RelativeSource={RelativeSource AncestorType={x:Type DataGrid}}}" CommandParameter="{Binding}" >
                                                <icon:PackIconBoxIcons Kind="SolidArrowToTop">
                                                    <icon:PackIconBoxIcons.LayoutTransform>
                                                        <TransformGroup>
                                                            <ScaleTransform ScaleX="0.75" ScaleY="0.75"/>
                                                        </TransformGroup>
                                                    </icon:PackIconBoxIcons.LayoutTransform>
                                                </icon:PackIconBoxIcons>
                                            </Button>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>

                                <DataGridTemplateColumn   CanUserResize="False"  Width="auto">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <Button Grid.Row="0"
                                                        Background="{StaticResource MahApps.Brushes.Accent}"
                                                        ToolTip="Move To Up"
                                                        Command="{Binding Path=DataContext.MoveToUpCommand, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type UserControl}}}" CommandParameter="{Binding}" >
                                                <icon:PackIconFontAwesome Kind="CaretUpSolid">
                                                    <icon:PackIconFontAwesome.LayoutTransform>
                                                        <TransformGroup>
                                                            <ScaleTransform ScaleX="0.75" ScaleY="0.75"/>
                                                        </TransformGroup>
                                                    </icon:PackIconFontAwesome.LayoutTransform>
                                                </icon:PackIconFontAwesome>
                                            </Button>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>

                                <DataGridTemplateColumn   CanUserResize="False"  Width="auto">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <Button ToolTip="Delete Item"  Background="DarkRed" Command="{Binding DataContext.DeleteItemCommand, RelativeSource={RelativeSource AncestorType={x:Type DataGrid}}}" CommandParameter="{Binding}">
                                                <icon:PackIconMaterial Kind="Delete">
                                                    <icon:PackIconMaterial.LayoutTransform>
                                                        <TransformGroup>
                                                            <ScaleTransform ScaleX="0.75" ScaleY="0.75"/>
                                                        </TransformGroup>
                                                    </icon:PackIconMaterial.LayoutTransform>
                                                </icon:PackIconMaterial>

                                            </Button>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>


                                <DataGridTemplateColumn   CanUserResize="False"  Width="auto">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <Button ToolTip="Item Info"   Command="{Binding DataContext.ShowItemTitlesCommand, RelativeSource={RelativeSource AncestorType={x:Type DataGrid}}}" CommandParameter="{Binding}">
